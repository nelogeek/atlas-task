@{
    ViewData["Title"] = "Кредитный калькулятор";
}

@model Loan

<h1>@ViewData["Title"]</h1>

<div class="mt-4 d-flex">
    <div class="">
        <form asp-controller="Loan" asp-action="Calculate" method="post">
            <div class="form-group">
                <label asp-for="LoanAmount">Сумма займа:</label>
                <input asp-for="LoanAmount" class="form-control" id="LoanAmount" pattern="[0-9]+(\,[0-9]+)?" title="100,50" required />
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanTerm">Срок займа (в месяцах):</label>
                <input asp-for="LoanTerm" class="form-control" id="LoanTerm" required />
                <span asp-validation-for="LoanTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestRate">Ставка (в год):</label>
                <input asp-for="InterestRate" class="form-control" id="InterestRate" required />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Рассчитать</button>
        </form>
    </div>
    
</div>